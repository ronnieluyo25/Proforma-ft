{
    "functions": {
        "api/pdf.js": {
            "runtime": "nodejs20.x",
            "memory": 1024,
            "maxDuration": 30,
            "includeFiles": "templates/**"
        },
        "api/*.js": {
            "runtime": "nodejs20.x"
        }
    },
    "headers": [
        {
            "source": "/",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "no-store"
                }
            ]
        },
        {
            "source": "/index.html",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "no-store"
                }
            ]
        }
    ],
    "cleanUrls": true,
    "regions": [
        "iad1",
        "sfo1"
    ]
}